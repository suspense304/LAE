@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <div class="row">
        <div class="card-deck mb-3 text-center">
            <div class="card mb-4 box-shadow" style="background-color: rgba(0, 0, 0, 0.30); padding:0px 5px 0px 5px">
                <div class="card-body d-flex flex-column" style="background-color: rgba(0, 0, 0, 0.22)">
                    <h5 class="card-title text-uppercase" style="color: #fcc500; font-weight:800">Find Group</h5>
                    <p class="card-text" style="color:  #fff; font-weight: 400">Search through active games to find a group for an event.</p>
                    <a asp-page="/Events/Session/Index" class="btn btn-dark mt-auto">Search</a>
                </div>
            </div>
            <div class="card mb-4 box-shadow" style="        background-color: rgba(0, 0, 0, 0.30);
        padding: 0px 5px 0px 5px">
                <div class="card-body d-flex flex-column" style="background-color: rgba(0, 0, 0, 0.22)">
                    <h5 class="card-title text-uppercase" style="color: #fcc500; font-weight:800">Create Group</h5>
                    <p class="card-text" style=" color: #fff; font-weight: 400">Create a group for an event that other players to join.</p>
                    <a asp-page="/Events/Session/Create" class="btn btn-dark mt-auto">Create</a>
                </div>
            </div>
            <div class="card mb-4 box-shadow" style="background-color: rgba(0, 0, 0, 0.30); padding:0px 5px 0px 5px">
                <div class="card-body d-flex flex-column" style="background-color: rgba(0, 0, 0, 0.22)">
                    <h5 class="card-title text-uppercase" style="color: #fcc500; font-weight:800">Join Discord</h5>
                    <p class="card-text" style=" color: #fff; font-weight: 400">Join our community and receive notifications when your group is ready.</p>
                    <a href="https://discord.gg/xnkVJ5B" class="btn btn-dark mt-auto">Join Discord</a>
                </div>
            </div>
        </div>
    </div>

</div>
