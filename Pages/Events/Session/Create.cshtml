@page
@model LAE.Pages.Events.Events.CreateModel

@{
    ViewData["Title"] = "Create";
}

@if (Model.LoggedInUser != null)
{
    <hr />
    <div class="row">

        <div class="col-md-6">
            <span>In-Game Time: @Model.ServerTime</span><br />
            <span>Website Time: @Model.CurrentTime</span><br />
            <span style="color: red; font-weight: 800; font-size: 1.05em;">@Model.ErrorMessage</span><br />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EventInfo.Activity" class="control-label">Event Type</label>
                    <select asp-for="EventTypeId" asp-items="Model.ActivityTypes" class="form-control">
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="EventInfo.Activity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventInfo.ActivityId" class="control-label">Event</label>
                    <select id="ActivityId" asp-for="EventInfo.ActivityId" class="form-control">
                    </select>
                    <span asp-validation-for="EventInfo.ActivityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventInfo.StartingTime" class="control-label">Time will be converted to Server Time Automatically</label>
                    <input asp-for="EventInfo.StartingTime" class="form-control" />
                    <span asp-validation-for="EventInfo.StartingTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    <h3>You are not logged in!</h3>
}
@section Scripts {
    <script>
        $(function () {
            $("#EventTypeId").on("change", function () {
                var eventId = $(this).val();
                $("#ActivityId").empty();
                $("#ActivityId").append("<option value=''>Select Event</option>");
                $.getJSON(`?handler=SubEvents&EventTypeId=${eventId}`, (data) => {
                    console.log(data);
                    $.each(data, function (i, item) {
                        $("#ActivityId").append($("<option>").val(item.id).text(item.name));
                    });
                });
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
